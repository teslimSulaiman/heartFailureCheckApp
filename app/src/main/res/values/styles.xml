<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="SuperMaterialTheme">
        <!-- Customize your theme here. -->

    </style>
    
    <style name="SuperMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlertDialogStyleGreen" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:textColorPrimary">@color/colorGreen</item>
    </style>
    <style name="AlertDialogStyleYellow" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorYellow</item>
        <item name="android:textColorPrimary">@color/colorYellow</item>
    </style>
    <style name="AlertDialogStyleRed" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textColorPrimary">@color/colorRed</item>
    </style>

</resources>